{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}
{% block stylesheetsnew %}
{% endblock %}

{% block body %}


   <h1> Liste commande </h1> 
    <a class="btn btn-outline-primary mb-2" href="{{ path('commande_new') }}">Ajouter une nouvelle commande </a>
    <table id="table2" class="table table-striped table-bordered">
        <thead>
            <tr> 
                <th>Référence</th>
                <th>Client</th>
                <th>Status</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in commandes %}
            <tr> 
                <td>{{ facture.nom }}</td>
                <td>{{ facture.client.nom }}</td>
                <td>{{ facture.statue }}</td>
                <td>{{ facture.DateFormat }}</td>

                <td>
                    <a  class="text-primary p-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Afficher" aria-label="Views" href="{{ path('commande_show', {'id': facture.id}) }}"><i class="bi bi-eye-fill"></i></a>
                    <a class="text-success p-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Editer" aria-label="Views" href="{{ path('commande_edit', {'id': facture.id}) }}"><i class="bi bi-pencil-fill"></i></a>
                    <a class="text-success p-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Dupliquer" aria-label="Views" href="{{ path('dupliquer_commande', {'id': facture.id}) }}"><i class="bi bi-files"></i></a>
                    {# <a class="text-primary p-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Editer" aria-label="Views" href="{{ path('facture_edit', {'id': facture.id}) }}"><i class="bi bi-trash-fill"></i></a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">il y a aucun devis dans votre table </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
