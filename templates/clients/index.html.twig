{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}




{% block body %}
    <h1>Liste des clients </h1>
    <div class="row btncreate">
        <div class="col-md-6">    
            <a class="btn btn-outline-success" href="{{ path('clients_new') }}">Nouveau client</a>
        </div>
        <div class="col-md-6 btnfacture">
            <a class="btn btn-outline-success" href="{{ path('devis_new') }}">Nouveau devis</a>
            <a class="btn btn-outline-success" href="{{ path('facture_new') }}">Nouvelle facture</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="table2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Adress</th>
                            <th>Ice</th>
                            <th>Telephone</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.nom }}</td>
                                <td>{{ client.adress }}</td>
                                <td>{{ client.ice }}</td>
                                <td>{{ client.telephone }}</td>
                                <td>
                                    <a class="text-primary p-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Afficher" aria-label="Views" href="{{ path('clients_show', {'id': client.id}) }}"><i class="bi bi-eye-fill"></i></a>
                                    <a class="text-primary p-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Devis" aria-label="Views" href="{{ path('listedevisclient', {'id': client.id}) }}"><i class="bi bi-files"></i></a>
                                    <a class="text-warning p-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Editer" aria-label="Views" href="{{ path('clients_edit', {'id': client.id}) }}"><i class="bi bi-pencil-fill"></i></a>
                                    {# <a class="text-danger"><i class="bi bi-trash-fill">{{ include('clients/_delete_form.html.twig') }}</i></a> #}
                                 </td>
                            </tr>
                            {% else %}
                            <tr>
                            <td colspan="6">il y a aucun client dans votre table </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div> 

{% endblock %}
